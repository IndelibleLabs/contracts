{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["es2017", "es7", "es6"],
    "typeRoots": ["node_modules/@types"],
    "module": "commonjs",
    "outDir": "dist",
    "allowJs": true,
    "baseUrl": "src",
    "declaration": true,
    "esModuleInterop": true,
    "strict": true
  },
  "include": ["src/**/*", ".env"],
  "exclude": ["node_modules", "dist"]
}
